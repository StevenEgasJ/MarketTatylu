JWT_SECRET=your-jwt-secret-key-here-change-in-production
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# URLs de otros microservicios (desarrollo local)
CRUD_API=http://localhost:3001
MATH_API=http://localhost:3003

# Email (confirmación de compra)
EMAIL_FROM=YourCompany <noreply@yourcompany.com>
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your-ethereal-email
